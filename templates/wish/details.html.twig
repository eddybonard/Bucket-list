{% extends 'bucketList.html.twig' %}

{% block title %} {{ parent() }} - Details {% endblock %}

{% block body %}
    <div class="jumbotron text-center mr-5 ml-5 mt-3 bg-warning">
        <h2 class="titre_detail "><a href="{{ path('wish_listes') }}" title="Wish-List" class="text-decoration-none text-dark">{{ wish.title }}</a></h2>
    </div>
    <div class="ml-2">
        <p class="text-left">Par {{ wish.author }}<br>
            {{ wish.dateCreated | date('d/m/Y H:i') }}
        </p>
        <p>Categorie : <em id="categorieName"> {{ wish.category.name }}</em></p>
    </div>
    <section id="section_detail" class="mt-3 mr-3 ml-3 mb-3 pb-3">
        <div class="description">
            <p id="description">
                <b>{{ wish.description }}</b>
            </p>
        </div>
        <div class="text-center">
            <a href="{{ path('wish_formulaireModifier', {'id':wish.id}) }}" title="Modifier" class="btn btn-outline-info">Mofifier</a>
        </div>
    </section>
{% endblock %}

