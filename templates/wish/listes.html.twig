{% extends 'bucketList.html.twig' %}

{% block title %} {{ parent() }} - WishList {% endblock %}

{% block body %}
    <div class="jumbotron text-center mr-5 ml-5 mt-3 bg-warning">
        <h1>Wish-List </h1>
    </div>

    <section class="mt-3 mb-3" id="wishList">
        {% if wishs == null  %}
            <div class="text-center text-muted"><h3>Aucune Wish ajoutée</h3></div>
        {% endif %}
        <div class="container">
            <div class="row">
                {% for wish in wishs %}
                    <div class="col-lg-4 mb-3">
                        <div class="card">
                          <img src="{{ asset('img/vacance-plage.jpg') }}" alt="vacance à la plage">
                            <div class="card-body">
                                <div class="card-title"><h3>{{ wish.title }}</h3> </div>
                                <div class="card-text">
                                    <p>Par {{ wish.author }}<br>
                                        {{ wish.dateCreated | date('d/m/Y') }}</p>
                                    <p>Categorie : {{  wish.category.name }}</p>
                                    <a href="{{ path('wish_details', {'id': wish.id}) }}"><button class="btn btn-outline-primary">Détails</button></a>
                                </div>
                            </div>
                        </div>
                    </div>

                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}

