{% extends 'bucketList.html.twig' %}

{% block title %}{{ parent() }} - Modification{% endblock %}


{% block body %}

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="jumbotron text-center mr-5 ml-5 mt-3 bg-warning">
        <h2>Modification </h2>
    </div>

    <div class="ml-5 w-50 mb-3">
        {% form_theme registrationForm "bootstrap_4_layout.html.twig" %}
        {{ form_start(registrationForm) }}
        {% if form_errors(registrationForm)  %}
            {{ form_errors(registrationForm) }}
        {% endif %}

        {{ form_label(registrationForm.nom) }}
        {{ form_widget(registrationForm.nom) }}

        {{ form_label(registrationForm.prenom) }}
        {{ form_widget(registrationForm.prenom) }}

        {{ form_label(registrationForm.pseudo) }}
        {{ form_widget(registrationForm.pseudo) }}

        {{ form_label(registrationForm.email) }}
        {{ form_widget(registrationForm.email) }}

        {{ form_label(registrationForm.plainPassword) }}
        {{ form_widget(registrationForm.plainPassword) }}


        <div class="mt-3">
            <button type="submit" class="btn btn-outline-success">Modification</button>&nbsp; <a href="{{ path('user_delete', {'id': app.user.id}) }}" class="btn btn-danger">Supprimer</a>
        </div>
        {{ form_end(registrationForm) }}
    </div>

{% endblock %}


